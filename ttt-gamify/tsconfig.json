{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@overlay/*": ["src/overlay/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "scripts", "tests", "companion/src", "vite-env.d.ts"],
  "exclude": ["dist", "node_modules"]
}

