{
  "manifest_version": 3,
  "name": "TTT Gamify Overlay",
  "version": "0.1.0",
  "description": "Non-destructive gamification overlay for Tic-Tac-Toe.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "TTT Gamify"
  }
}

