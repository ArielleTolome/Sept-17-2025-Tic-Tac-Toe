{
  "name": "ttt-gamify",
  "version": "0.1.0",
  "private": true,
  "description": "Gamification & Frontend Content Overlay for Tic-Tac-Toe (extension + userscript + bookmarklet + companion + optional server)",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "vite build --config vite.config.ts",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:ui": "vitest",
    "e2e": "playwright test",
    "package:userscript": "node scripts/build-userscript.mjs",
    "package:bookmarklet": "node scripts/build-bookmarklet.mjs",
    "package:extension": "node scripts/build-extension.mjs",
    "package:all": "npm run build && npm run package:userscript && npm run package:bookmarklet && npm run package:extension",
    "companion:dev": "vite --config companion/vite.config.ts",
    "companion:build": "vite build --config companion/vite.config.ts",
    "server:dev": "node --env-file=.env server/src/index.js",
    "server:ts": "tsx server/src/index.ts",
    "server:build": "tsc -p server/tsconfig.json",
    "format": "prettier -w ."
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "localforage": "^1.10.0",
    "nanoid": "^5.0.7",
    "preact": "^10.24.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.1",
    "@types/node": "^22.5.4",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.47.0",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.12",
    "tslib": "^2.6.3",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vitest": "^2.0.5"
  }
}
