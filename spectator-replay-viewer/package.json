{
  "name": "spectator-replay-viewer",
  "version": "1.0.0",
  "private": true,
  "description": "Spectator & Replay Viewer SPA for Tic-Tac-Toe (standalone add-on)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx src/server/index.ts",
    "dev:mock": "cross-env MOCK=1 PORT=3001 tsx src/server/index.ts",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "tsup src/server/index.ts --format esm --target node20 --dts --out-dir dist/server",
    "preview": "vite preview",
    "serve": "node dist/server/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "run-s test:unit",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/js": "^9.10.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.3.1",
    "axe-core": "^4.8.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "happy-dom": "^14.12.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.8",
    "playwright": "^1.48.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md}": [
      "prettier --write",
      "eslint --fix --ext .ts,.tsx"
    ]
  }
}
