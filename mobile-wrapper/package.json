{
  "name": "ttt-mobile-wrapper",
  "version": "1.0.0",
  "private": true,
  "description": "Capacitor-based mobile wrapper for the Tic-Tac-Toe web app with deep links and notifications",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsup src/server/index.ts --format esm --target node20 --out-dir dist/server",
    "preview": "node dist/server/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "engines": { "node": ">=20.0.0" },
  "dependencies": {
    "@capacitor/app": "^6.1.1",
    "@capacitor/core": "^6.1.2",
    "@capacitor/local-notifications": "^6.1.0",
    "@capacitor/network": "^6.0.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@capacitor/cli": "^6.1.2",
    "@eslint/js": "^9.10.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "axe-core": "^4.8.4",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "playwright": "^1.48.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vitest": "^2.1.1"
  }
}

