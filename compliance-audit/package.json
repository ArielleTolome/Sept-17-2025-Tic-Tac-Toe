{
  "name": "ttt-compliance-audit",
  "version": "1.0.0",
  "private": true,
  "description": "Compliance & Accessibility Audit Pipeline using Playwright + axe-core",
  "type": "module",
  "scripts": {
    "build": "tsup src/generateReport.ts --format esm --target node20 --dts --out-dir dist",
    "audit": "playwright test && node dist/generateReport.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": { "node": ">=20.0.0" },
  "dependencies": {
    "@axe-core/playwright": "^4.10.0",
    "axe-core": "^4.8.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "playwright": "^1.48.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2"
  }
}

