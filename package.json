{
  "name": "ttt-ui-enhancer",
  "version": "1.0.0",
  "private": true,
  "description": "Zero-touch UI/UX and accessibility enhancer for Tic-Tac-Toe web apps.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/build-userscript.mjs && node scripts/build-bookmarklet.mjs && node scripts/build-extension.mjs",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:ui": "vitest",
    "e2e": "playwright test",
    "format": "prettier -w ."
  },
  "dependencies": {
    "preact": "10.23.2"
  },
  "devDependencies": {
    "@playwright/test": "1.48.2",
    "@preact/preset-vite": "2.9.1",
    "@types/node": "22.7.5",
    "@types/preact": "10.19.7",
    "axe-core": "4.10.0",
    "autoprefixer": "10.4.20",
    "eslint": "9.11.1",
    "eslint-plugin-n": "17.10.3",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "typescript": "5.6.2",
    "vite": "5.4.8",
    "vitest": "2.1.3",
    "fs-extra": "11.2.0"
  }
}
