{
  "manifest_version": 3,
  "name": "TTT Theme Pack Injector",
  "version": "1.0.0",
  "description": "Apply alternate themes to Tic-Tac-Toe web app via CSS variables.",
  "action": {
    "default_title": "TTT Themes",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "extension/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension/content.js"],
      "run_at": "document_start"
    }
  ]
}
