{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client", "@types/node" ],
    "baseUrl": ".",
    "paths": {
      "@/": ["src/"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "scripts", "tests", "vite.config.ts", "skin"],
  "exclude": ["node_modules", "dist"]
}
