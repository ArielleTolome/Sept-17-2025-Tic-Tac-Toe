{
  "name": "ttt-analytics-dashboard",
  "version": "1.0.0",
  "private": true,
  "description": "Read-only analytics dashboard for Tic-Tac-Toe (static export)",
  "scripts": {
    "dev": "next dev -p 5176",
    "build": "next build && next export && tsup src/server/index.ts --format esm --target node20 --out-dir dist/server",
    "serve": "node dist/server/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "engines": { "node": ">=20.0.0" },
  "dependencies": {
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.4.0",
    "next": "^14.2.10",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/js": "^9.10.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "playwright": "^1.48.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
