{
  "name": "matchmaking-lobby",
  "version": "1.0.0",
  "private": true,
  "description": "Matchmaking Queue & Lobby (Sidecar) for Tic-Tac-Toe",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:server dev:client",
    "dev:server": "tsx src/server/index.ts",
    "dev:client": "vite",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "tsup src/server/index.ts --format esm --target node20 --dts --out-dir dist/server",
    "serve": "node dist/server/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "run-s test:unit",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "engines": { "node": ">=20.0.0" },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/js": "^9.10.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/ws": "^8.5.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "axe-core": "^4.8.4",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "happy-dom": "^14.12.3",
    "playwright": "^1.48.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vitest": "^2.1.1"
  }
}

