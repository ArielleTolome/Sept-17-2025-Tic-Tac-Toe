{
  "name": "ttt-gif-renderer",
  "version": "1.0.0",
  "private": true,
  "description": "Render replays to animated GIF via node-canvas; GET /render/:gameId.gif",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --target node20 --dts --out-dir dist",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run --coverage"
  },
  "engines": { "node": ">=20.0.0" },
  "dependencies": {
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "gifencoder": "^2.0.1",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/gifencoder": "^2.0.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}

